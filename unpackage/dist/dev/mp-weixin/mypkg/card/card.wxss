.card-item .record-box .record {
  border-top: 1px solid #f6f6f6;
}
.card-item .record-box .record .record-item:not(:last-child) {
  border-bottom: 1px solid #f6f6f6;
}
.card-item .record-box .record .top:last-child {
  margin-bottom: 0;
}
.card-item .record-box .record .top {
