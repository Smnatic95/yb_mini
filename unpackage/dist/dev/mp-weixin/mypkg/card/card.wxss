}
.card-item .card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 120rpx;
}
.card-item .card .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000104;
}
.card-item .card .title .time {
  font-size: 24rpx;
  font-weight: 500;
  color: #C0C8D3;
}
.card-item .card .num {
