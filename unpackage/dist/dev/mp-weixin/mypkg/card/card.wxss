  font-size: 12px;
  font-weight: 500;
  color: #C0C8D3;
}
.card-item .record-box .record .top .left .price {
  margin-right: 10px;
  color: #FFA424;
}
.card-item .record-box .record .top .left .price.sub {
  color: #80C5CD !important;
}
.card-item .record-box .record .top .right {
