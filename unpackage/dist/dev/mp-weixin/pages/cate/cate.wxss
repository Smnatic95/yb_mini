.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #FFFFFF;
  z-index: 999;
}
.search-box .search-bar {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 35px;
  margin: 15px;
  background: #F6F6F6;
  border-radius: 20px;
}
.search-box .search-bar view {
  margin-left: 5px;
  font-size: 13px;
  font-weight: 500;
  color: #C0C8D3 !important;
  z-index: 999;
}
.scroll-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.scroll-box .scroll-left,
.scroll-box .scroll-right {
  height: 100vh;
  padding-top: 65px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.scroll-box .scroll-left {
  width: 130px;
  background-color: #F6F6F6;
  border-top: 1px solid #F6F6F6;
}
.scroll-box .scroll-left .active {
  position: relative;
  font-weight: 500;
  color: #294D7C;
  background-color: #FFFFFF;
}
.scroll-box .scroll-left .active::before {
  content: '';
  position: absolute;
  left: -3px;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6px;
  height: 20px;
  background-color: #294D7C;
  border-radius: 3px;
}
.scroll-box .scroll-left .scroll-view-item {
  line-height: 50px;
  text-align: center;
}
.scroll-box .scroll-right .scroll-view-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10px;
}
.scroll-box .scroll-right .scroll-view-item .goods-pic {
  width: 75px;
  height: 75px;
  margin-right: 10px;
  background-color: #F6F6F6;
  border-radius: 10px;
  overflow: hidden;
}
.scroll-box .scroll-right .scroll-view-item .goods-pic image {
  width: 100%;
  height: 100%;
}
.scroll-box .scroll-right .scroll-view-item .goods-info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-title {
  font-size: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-price {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-weight: bold;
  font-size: 18px;
  color: var(--color-money);
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-price .cart {
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-weight: 400;
  margin-right: 10rpx;
  background-color: #294D7C;
  border-radius: 50%;
  overflow: hidden;
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-price .out {
  float: right;
  display: inline-block;
  text-align: center;
  font-size: 12px;
  color: #FFFFFF;
  margin-right: 10rpx;
  margin-top: 2px;
  padding: 5rpx 10rpx;
  background-color: tomato;
  border-radius: 21rpx;
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-price .icon {
  margin-right: 2px;
  width: 46rpx;
  height: 28rpx;
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-price .price-dis {
  margin-left: 10rpx;
  font-size: 12px;
  font-family: DIN;
  font-weight: 500;
  color: #C0C8D3;
}
.scroll-box .scroll-right .scroll-view-item .goods-info .goods-price .price-dis text {
  text-decoration: line-through;
}
.btns-box {
  position: fixed;
  left: 50%;
  bottom: 20px;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 680rpx;
  height: 50px;
  background-color: #282828;
  border-radius: 25px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  z-index: 999;
}
.btns-box .cart {
  position: absolute;
  left: 20px;
  bottom: 10px;
  width: 60px;
}
.btns-box .cart image {
  width: 60px;
  height: 60px;
}
.btns-box .price {
  position: absolute;
  left: 100px;
  color: #FFFFFF;
  line-height: 50px;
  font-weight: bold;
  font-size: 18px;
}
.btns-box .settle {
  float: right;
  width: 120px;
  height: 100%;
  line-height: 50px;
  text-align: center;
  color: #FFFFFF;
  background-color: #294D7C;
  border-radius: 0 25px 25px 0;
}
.btns-box .settle::after {
  border: 0;
}
