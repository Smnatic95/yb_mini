.goods-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 30rpx;
  background-color: #FFFFFF;
}
.goods-box .goods-item {
  width: 336rpx;
  margin-bottom: 26px;
}
.goods-box .goods-item .pic {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 336rpx;
  height: 336rpx;
  background: #F6F6F6;
  border-radius: 2px;
}
.goods-box .goods-item .pic image {
  width: 100%;
  height: 100%;
}
.goods-box .goods-item .text .title {
  padding: 14rpx 0 4rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left !important;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000104;
}
.goods-box .goods-item .text .intro {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #C0C8D3;
}
.goods-box .goods-item .text .price-col {
  margin-top: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
}
.goods-box .goods-item .text .price-col .icon {
  font-size: 20rpx;
  font-weight: bold;
  color: #294D7C;
}
.goods-box .goods-item .text .price-col .price {
  font-size: 34rpx;
  font-family: DIN;
  font-weight: bold;
  color: tomato;
  height: 34rpx;
  line-height: 34rpx;
}
.goods-box .goods-item .text .price-col image {
  margin-right: 6rpx;
  width: 46rpx;
  height: 28rpx;
}
.goods-box .goods-item .text .price-col .price-dis {
  margin-left: 10rpx;
  font-size: 12px;
  font-family: DIN;
  font-weight: 500;
  color: #C0C8D3;
}
.goods-box .goods-item .text .price-col .price-dis text {
  text-decoration: line-through;
}
.goods-box .goods-item .text .price-col .cart {
  float: right;
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  text-align: center;
  margin-right: 10rpx;
  background-color: #294D7C;
  border-radius: 50%;
  overflow: hidden;
  z-index: 10;
}
.goods-box .goods-item .text .price-col .out {
  float: right;
  display: inline-block;
  text-align: center;
  font-size: 12px;
  color: #FFFFFF;
  margin-right: 10rpx;
  margin-top: 2px;
  padding: 5rpx 10rpx;
  background-color: tomato;
  border-radius: 21rpx;
}

